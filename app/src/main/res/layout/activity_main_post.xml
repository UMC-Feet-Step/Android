<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".src.main.post.PostActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/postIbBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/post_arrow_back" />

        <TextView
            android:id="@+id/postTvFragmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="@string/post_tv_fragment_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/postTvDate"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_gravity="center_vertical" />

        <ImageButton
            android:id="@+id/postIbCalendar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:src="@drawable/post_ib_cal" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageButton
                android:id="@+id/postIbGallery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/post_iv_unselected" />
        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/postIbPhotoCancel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="right"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:src="@drawable/post_pic_close" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/postIvLocation"
            android:layout_width="18dp"
            android:layout_height="26dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:src="@drawable/post_location_logo" />

        <Button
            android:id="@+id/postBtnLoc"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/post_text_round"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:hint="@string/post_tv_location_hint"
            android:textColor="@color/orange" />

    </LinearLayout>

    <EditText
        android:id="@+id/postEtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/post_tv_title_hint"
        android:background="@drawable/post_text_round"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="@color/blackForText" />

    <EditText
        android:id="@+id/postEtContent"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/post_text_round"
        android:hint="@string/post_tv_content_hint"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:ellipsize="end"
        android:gravity="left"
        android:textSize="14sp"
        android:textColor="@color/blackForText" />

    <Switch
        android:id="@+id/postSwOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:switchPadding="10dp"
        android:thumb="@drawable/post_sw_thumb"
        android:track="@drawable/post_sw_track"
        android:text="@string/post_sw_text"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/postBtnPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/post_btn_text"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/post_btn_round"/>


</androidx.appcompat.widget.LinearLayoutCompat>