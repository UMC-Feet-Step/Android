<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mapgallery_tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gallery_tv_post_position"
        android:textStyle="normal"
        android:textSize="24sp"
        android:textColor="#000000"
        android:fontFamily="@font/noto_sans_extrabold"

        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mapgallery_tv_feature_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gallery_tv_feature_1"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#000000"

        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapgallery_tv_position" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mapgallery_rv_post_list"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_marginTop="57dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mapgallery_btn_post"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:background="@drawable/shape_btn_post"
        android:drawableRight="@drawable/layerlist_ic_post"
        android:paddingRight="16dp"

        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>